<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">Forms            </h1>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header ">
                        <div class="form-group float-right">
                            <a href="/admin/articles" class="btn btn-primary">
                                <i class="fa fa-arrow-left"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">Title</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="title">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">Slug</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="slug">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" name="password" class="form-control">
                                </div>
                            </div>


                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">Status</label>
                                <div class="col-sm-10">
                                    <div class="i-checks">
                                        <input id="radioCustom2" type="radio"  value="option2" name="status" class="form-control-custom radio-custom">
                                        <label for="radioCustom2">Active</label>
                                    </div>
                                    <div class="i-checks">
                                        <input id="radioCustom3" checked type="radio" value="option2"  name="status" class="form-control-custom radio-custom">
                                        <label for="radioCustom3">Inactive</label>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group row float-right">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-primary ">Save </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>